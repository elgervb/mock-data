{
  "name": "@elgervb/mock-data",
  "version": "0.0.1",
  "description": "Mock data made easy.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "prebuild": "rimraf lib/",
    "build": "tsc",
    "lint": "tslint -p ./tsconfig.spec.json",
    "test": "jest",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run build && npm run lint && npm run test -- --coverage"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint -- --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "author": "",
  "license": "ISC"
}